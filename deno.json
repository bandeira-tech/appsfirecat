{
  "workspace": [
    "./packages/host-protocol",
    "./packages/public-static",
    "./packages/cli"
  ],
  "imports": {
    "@bandeira-tech/b3nd-sdk": "jsr:@bandeira-tech/b3nd-sdk",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@hono/hono": "jsr:@hono/hono@^4"
  },
  "tasks": {
    "test": "deno test -A --no-check packages/",
    "lint": "deno lint packages/",
    "fmt": "deno fmt packages/",
    "dev:public-static": "deno run -A --watch packages/public-static/mod.ts",
    "start:public-static": "deno run -A packages/public-static/mod.ts",
    "deploy:site": "deno run -A scripts/deploy-site.ts",
    "test:provider-flow": "deno run -A scripts/test-provider-flow.ts",
    "firecat": "deno run -A packages/cli/mod.ts"
  }
}
